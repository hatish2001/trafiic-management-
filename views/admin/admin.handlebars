<table class="table table-bordered">
  <thead class="table-success">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Customer Name</th>
      <th scope="col">Customer Contact</th>
      <th scope="col">Description</th>
      <th scope="col">Once completed</th>
    </tr>
  </thead>
  <tbody>
    {{#each complaints}}
        <tr>
            <td>{{_id}}</td>          
            <td>{{name}}</td>
            <td>{{contact}}</td>
            <td>{{desc}}</td>
            <form method="POST" action="/admin/delete/{{_id}}?_method=DELETE">
              <td><button class="btn btn-danger">Delete complaint</button></td>
            </form>
        </tr>
    {{/each}}
    
  </tbody>
</table>

<div class="container mt-5 border p-5" style="width:70%">
    <h2> Assign the Complaint to Engineer</h2>
    <br>
    <form method="post" action="/assign">
    <div class="form-group">
        <label>Complaint Number</label>
        <input class="form-control" type="text" name="complaintID" placeholder="Complaint Number">
    </div>
    <div class="form-group">
        <label>Engineer</label>
        <select name="paticular department" id="engineerName" class="form-control">
           <option>Road safety department</option>
           <option>Pot holes department</option>
           <option>Road cleaniness</option>
           <option>Electrical department</option
            <button class="btn btn-primary">Assign</button>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success btn-block">Assign to Department</button>
    </div>
    </form>
</div>